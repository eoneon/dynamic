<%= form_for(@item_type) do |f| %>
  <% if @item_type.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item_type.errors.count, "error") %> prohibited this item_type from being saved:</h2>

      <ul>
      <% @item_type.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <!-- loop through each field -->
  <%= f.fields_for :fields do |builder| %>
    <!-- for each field, render field partial
    we're generating fields to make other fields -->
    <%= render 'field_fields', f: builder %>
  <% end %>

  <!-- this is a helper method for adding more fields  -->
  <%= link_to_add_fields "Add Field", f, :fields %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
